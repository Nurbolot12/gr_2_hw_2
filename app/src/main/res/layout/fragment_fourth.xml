<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragments.FourthFragment"
    android:background="@color/gray">

    <TextView
        android:id="@+id/text_view_name_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PrintName"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_age_fourth"/>

    <TextView
        android:id="@+id/text_view_age_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PrintAge"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/text_view_city_fourth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_name_fourth" />

    <TextView
        android:id="@+id/text_view_city_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PrintCity"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_age_fourth" />


</androidx.constraintlayout.widget.ConstraintLayout>